<div class="contents_new">
    <%= form_for(@article) do |f| %>
        <h2>新規投稿</h2>
        <div class="article_new">
            <div class="article_new_title">
                <%= f.label :タイトル %><br/>
                <%= f.text_field :title, autofocus: true, maxlength: "15", placeholder: "タイトル（15文字以内）", class: "article_new_title_field" %>
            </div>
            <div class="article_new_text">
                <%= f.label :本文 %><br/>
                <%= f.text_area :text, placeholder: "ここに本文を入力", autofocus: true, class: "article_new_text_field" %>
            </div>
            <div class="article_new_image">
                <%= f.label :画像 %><br/>
                <%= f.file_field :image,  placeholder: "画像アップロード", class:"article_new_image_field" %>
            </div>
        </div>
        <div class="article_new_btn">
            <%= f.submit "投稿する", class:"article_new_btn_field" %>
        </div>
    <% end %>
</div>