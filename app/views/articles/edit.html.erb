<div class="contents_edit">
    <%= form_for(@article) do |f| %>
        <h2>投稿の編集</h2>
        <div class="article_edit">
            <div class="article_new_title">
                <%= f.label :タイトルの編集 %><br/>
                <%= f.text_field :title, autofocus: true, maxlength: "15", placeholder: "タイトル（15文字以内）", class: "article_new_title_field" %>
            </div>
            <div class="article_edit_text">
                <%= f.label :本文の編集 %><br/>
                <%= f.text_area :text, placeholder: "ここに本文を入力", autofocus: true, class: "article_edit_text_field" %>
            </div>
            
            <p class="article_edit_image_area">現在の画像</p>
                <%= image_tag @article.image, class: "article_edit_image_space" %>
            <div class="article_edit_image">
                <%= f.label :画像の編集 %><span><br/>
                <%= f.file_field :image, autofocus: true, value: "", class: "article_edit_image_field" %>
            </div>
        </div>
        <div class="article_edit_btn">
            <%= f.submit "変更する", class: "article_new_btn_field" %>
        </div>
    <% end %>
</div>