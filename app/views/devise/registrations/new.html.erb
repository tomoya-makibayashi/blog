<div class="signup_signin_common">
  <div class="form_field_row">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <h2>新規登録</h2>
    <div class="field">
        <%= f.label :メールアドレス, class: "label_field" %><br />
      <div class="form_field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form_field_common" %>
      </div>
    </div>
    
    <div class="field">
        <%= f.label :ニックネーム, class: "label_field" %><br />
      <div class="form_field">
        <%= f.email_field :nickname, autofocus: true, class: "form_field_common" %>
      </div>
    </div>

    <div class="field">
      <%= f.label :パスワード, class: "label_field" %>
        <% if @minimum_password_length %>
        <span>(<%= @minimum_password_length %> 文字以上)</span>
        <% end %><br />
      <div class="form_field">
        <%= f.password_field :password, autocomplete: "new-password",class: "form_field_common" %>
      </div>
    </div>

    <div class="field">
      <%= f.label :パスワード（確認）, class: "label_field" %><br />
      <div class="form_field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form_field_common" %>
      </div>
    </div>

    <div class="sign_up_in_common_btn">
      <%= f.submit "登録する", class: "sign_up_in_common_btn_field" %>
    </div>
<% end %>

    <div class="another_pass_field">
      <%= render "devise/shared/links" %>
    </div>
  </div>

</div>
