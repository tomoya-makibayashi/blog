<div class="signup_signin_common">  
  
  <div class="form_field_row">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
    <h2>パスワードをお忘れの方</h2>
    <div class="field">
      <%= f.label :メールアドレス, class: "label_field" %><br />
      <div class="form_field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form_field_common" %>
      </div>
    </div>
    <div class="sign_up_in_common_btn">
      <%= f.submit "メール送信", class: "sign_up_in_common_btn_field" %>
    </div>
  <% end %>
    <div class="another_pass_field">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>