<!DOCTYPE html>
<html>
  <head>
    <title>Miniblog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header">
      <div class="header_box">
        <div class="header_box_menu">
            <div class="header_box_menu_icon">
            <%= link_to "Blogs", root_path, class: "header_box_menu_icon_btn" %>
            </div>
            <ul class="header_box_menu_list">
                <li class="header_box_menu_list_btn">
                <%= link_to "新規投稿", new_article_path, class: "header_box_menu_list_btn1" %>
                </li>
                <% if user_signed_in? %>
                <li class="header_box_menu_list_btn">
                <%= link_to "マイページ", user_path(current_user), class: "header_box_menu_list_btn1" %>
                </li>
                <li class="header_box_menu_list_btn">
                <%= link_to "ログアウト", destroy_user_session_path, class: "header_box_menu_list_btn1", method: :delete %>
                </li>
                <% else %>
                <li class="header_box_menu_list_btn">
                <%= link_to "ログイン", new_user_session_path, class: "header_box_menu_list_btn1" %>
                </li>
                <% end %>
            </ul>    
        </div>
      </div>
  </header>

    <%= yield %>
  </body>
  <footer class="footer">
    <div class="footer_copyright">@copyright Tomoya Makibasyashi 2021</div>
  </footer>
</html>
